#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
#include <locale.h>
#include <stdlib.h>

double* full_elements(double* array, int n)
{
	srand((unsigned)time(NULL));
	for (int i = 0; i < n; i++)
		array[i] = 0 + rand() % 41;
	return array;
}

double* calc_elements(double* array, int n)
{
	for (int i = 0; i < n; i++)
		array[i] = pow(array[i], 2);
	return array;
}

